<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mediaproductionart.mediaproductionart.ContUsFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/margin_4">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="@drawable/roundcorners"
                android:src="@drawable/contact_us" />




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/margin_2"
                android:layout_marginTop="@dimen/margin_2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="About Us"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_head_1"
                    android:textStyle="bold" />
            </LinearLayout>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/simple_text"
                android:textAlignment="center"
                android:text="Media Production Art was founded in the November of 2012 in Pakistan world largest company is to provide Creative Web Design, Web Development, and Web Marketing Services from static presentation websites to complex database driven with CMS, ecommerce websites. We also provide Graphics Designing to customer at very rock-bottom rate who wants to grow up business in the current market compensation we are here to enhance you productivity."/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/margin_2"
                android:layout_marginTop="@dimen/margin_2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contact info"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_head_1"
                    android:textStyle="bold" />
            </LinearLayout>



            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3sp"
                android:drawableLeft="@drawable/ic_message_accent_color"
                android:text="Email: info@mediaproductionart.com"
                android:textSize="@dimen/simple_text"
                android:layout_below="@+id/body_text3"
                android:layout_marginLeft="25dp"
                android:drawablePadding="10dp"/>


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3sp"
                android:drawableLeft="@drawable/ic_message_accent_color"
                android:text="Email: support@mediaproductionart.com"
                android:textSize="@dimen/simple_text"
                android:layout_below="@+id/type1"
                android:layout_marginLeft="25dp"
                android:drawablePadding="10dp"/>



            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3sp"
                android:drawableLeft="@drawable/ic_phone_accent_color"
                android:text="Phone: o22-3408132"
                android:textSize="@dimen/simple_text"
                android:layout_below="@+id/type1"
                android:layout_marginLeft="25dp"
                android:drawablePadding="10dp"/>


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3sp"
                android:drawableLeft="@drawable/ic_phone_accent_color"
                android:text="Cell: (+92) 333-2789447"
                android:textSize="@dimen/simple_text"
                android:layout_below="@+id/type1"
                android:layout_marginLeft="25dp"
                android:drawablePadding="10dp"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3sp"
                android:drawableLeft="@drawable/ic_whatsapp_accent_color"
                android:text="Cell: (+92) 3133876798"
                android:textSize="@dimen/simple_text"
                android:layout_below="@+id/type1"
                android:layout_marginLeft="25dp"
                android:drawablePadding="10dp"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3sp"
                android:drawableLeft="@drawable/ic_home"
                android:text="Flat # 01 First Floor Raeesa Apparment Unit # 7 Near Majee Hospital Latiafabad HYD."
                android:textSize="@dimen/simple_text"
                android:layout_below="@+id/type1"
                android:layout_marginLeft="25dp"
                android:drawablePadding="10dp" />




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/margin_2"
                android:layout_marginTop="@dimen/margin_2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Business Hours"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_head_1"
                    android:textStyle="bold" />
            </LinearLayout>




            <TextView
                android:id="@+id/type1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3sp"
                android:text="Monday - Friday 9am to 5pm"
                android:textSize="@dimen/simple_text"
                android:layout_below="@+id/body_text3"
                android:layout_marginLeft="25dp"
                android:drawableLeft="@drawable/ic_clock"
                android:drawablePadding="10dp"/>


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3sp"
                android:text="Saturday - 9am to 2pm"
                android:textSize="@dimen/simple_text"
                android:layout_below="@+id/type1"
                android:layout_marginLeft="25dp"
                android:drawableLeft="@drawable/ic_clock"
                android:drawablePadding="10dp"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3sp"
                android:text="Sunday - Closed"
                android:textSize="@dimen/simple_text"
                android:layout_below="@+id/type1"
                android:layout_marginLeft="25dp"
                android:drawableLeft="@drawable/ic_clock"
                android:drawablePadding="10dp"/>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_2"
    android:layout_marginBottom="@dimen/margin_3"
    android:layout_marginLeft="@dimen/margin_1"
    android:layout_marginRight="@dimen/margin_1"
    android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Your Name"
                    android:id="@+id/etNameContUs"
                    android:inputType="textPersonName"/>
            </android.support.design.widget.TextInputLayout>



            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Your Email"
                    android:id="@+id/etEmailContUs"
                    android:inputType="textEmailAddress"/>
            </android.support.design.widget.TextInputLayout>



            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Subject"
                    android:id="@+id/etSubjectContUs"
                    android:inputType="textEmailSubject"/>
            </android.support.design.widget.TextInputLayout>



            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Message"
                    android:id="@+id/etMessageContUs"/>
            </android.support.design.widget.TextInputLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/btnSubmitContUs"
        android:layout_marginTop="@dimen/margin_3"
        android:background="@drawable/roundcorners_2"
        android:textColor="@color/colorText"
        />


</LinearLayout>

            <include layout="@layout/footer" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
